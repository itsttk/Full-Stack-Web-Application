<!DOCTYPE html>
<html>
<head>
	<title>welcome</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href= "/css/home.css" type="text/css">
</head>
<body>

<p class="intro">G2 Crowd Team Roaster</p>

<hr>


{{#each welcome}}

<div class="element">

<p><img src="{{this.image_url}}" alt="{{ this.name }}" class="img1">

<p class="name">{{this.name}} </p>
<p class="title">{{this.title}}</p>
<p class="bio">{{this.bio}}</p>
{{#if this.temp}}

<p>success</p>

<p>{{this.count}} people have said Yes!</p>


{{else}}

<p >      
	<form action="/user" method="post">
            <label>Wanted to work with {{this.name}} ?</label>
            <input type="text" id="name" name="name" placeholder="email" required/>
            <input type="hidden" id="id" name="id" value="{{this._id}}">

            <input type="submit" value="Yes!" />. 

    </form>

</p>

<p>{{this.count}} people have said Yes!</p>


{{/if}}

<br clear="all" />


 </p>



<hr>
	

</div>
{{/each}}




</body>
</html>
